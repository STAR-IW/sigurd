generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @unique @default(autoincrement())
  createdAt  DateTime    @default(now())
  email      String      @unique // creates indexing 
  name       String?
  role       Role
  password   String
  phone      String
  Instructor Instructor? //user has max ONE instructor profile
  Waitlist   Waitlist[]
  Booking    Booking[]
}

model Instructor {
  id          Int       @id @default(autoincrement())
  bio         String
  isActive    Boolean
  specialties Specialty
  user        User      @relation(fields: [userId], references: [id])
  userId      Int       @unique
  Class       Class[]
}

model Class {
  id              Int        @id @unique @default(autoincrement())
  classType       ClassType
  startTime       DateTime   @default(now())
  endTime         DateTime
  capacity        Int
  currentBookings Int
  instructor      Instructor @relation(fields: [instructorId], references: [id])
  instructorId    Int
  Waitlist        Waitlist[]
  Booking         Booking[]


  @@index([startTime, instructorId])

}

model Waitlist {
  id       Int      @id @default(autoincrement())
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  position Int
  joinedAt DateTime
  class    Class    @relation(fields: [classId], references: [id])
  classId  Int

  @@index([classId, position])
}

model Booking {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  status     Status
  bookedAt   DateTime  @default(now())
  canceledAt DateTime?
  class      Class     @relation(fields: [classId], references: [id])
  classId    Int

  @@index([userId, classId])
}

enum Specialty {
  WEIGHT_LIFTING
  CARDIO
  MASS_GAIN
  WEIGHT_LOSS
}

enum Role {
  INSTRUCTOR
  ADMIN
  STUDENT
  SERVICE
}

enum ClassType {
  WEIGHT_LIFTING
  CARDIO
  MASS_GAIN
  WEIGHT_LOSS
}

enum Status {
  BOOKED
  WAITING
  CANCELLED
  REJECTED
}
